# Server Configuration
PORT=5000

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/smart-todo
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/smart-todo
MONGODB_URI=mongodb://localhost:27017/smart-todo

# JWT Configuration
# Generate a secure random string for production (e.g., using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=24h
